# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/extract_pdf

# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_PROVIDER=openai  # openai, huggingface, cohere, ollama

# OpenAI Configuration (if using OpenAI embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace Configuration (if using HuggingFace embeddings)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Cohere Configuration (if using Cohere embeddings)
COHERE_API_KEY=your_cohere_api_key_here

# Ollama Configuration (if using local Ollama embeddings)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Text Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNK_SIZE=2000

# PDF Processing Configuration
MAX_PDF_SIZE_MB=100
ENABLE_OCR=false
OCR_LANGUAGE=por  # por, eng, spa, etc.

# Vector Store Configuration
VECTOR_DIMENSION=1536  # Depends on embedding model
SIMILARITY_METRIC=cosine  # cosine, l2, inner_product

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=10
ENABLE_CACHE=true
CACHE_DIR=.cache

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/extract_pdf.log

# Development Configuration
DEBUG=false
ENVIRONMENT=production  # development, staging, production
